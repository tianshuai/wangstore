  <eval>
      <% if @success %>
        //alert('删除成功!');
		<% if @type == 1 %>
			var current_id = "<%=params[:id]%>";
			var asset_id = $("#asset_id").val();
			if (current_id == asset_id)
			{
			  $("#asset_id").attr('value',0);
