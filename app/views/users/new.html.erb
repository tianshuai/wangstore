<% provide(:title, '注册') %>

<% content_for :jquery do %>

	/*给validate插件增加方法filesize*/
	/*验证用户名*/
	$.validator.addMethod('user_verify', function(value, element) {
		var reg = /^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]+$/;
		return this.optional(element) || reg.test(value);
	});
	/*验证用户名长度,汉字算2个字符*/
	$.validator.addMethod('user_length_verify', function(value, element) {
		var size = value.replace(/[^\x00-\xff]/g, '..').length;
		return this.optional(element) || (size >= 4 && size <= 18);
	});

  //validate验证
 $("#check_loginup_form").validate({
    rules: {
      'user[name]': {
          required: true,
          //minlength: 2,
		  //maxlength: 18,
		  user_verify: true,
		  user_length_verify: true,
			remote: {
				url: "/user/ajax_validate_only",     //后台处理程序
				type: "post",               //数据发送方式
				dataType: "json",           //接受数据格式   
				data: {                     //要传递的数据
					val: function() {
						return $(":input[name='user[name]']").val();
					},
					type: 1
				}
			}
      },
      'user[email]': {
          required: true,
		  email: true,
			remote: {
				url: "/user/ajax_validate_only",     //后台处理程序
				type: "post",               //数据发送方式
				dataType: "json",           //接受数据格式   
				data: {                     //要传递的数据
					val: function() {
						return $(":input[name='user[email]']").val();
					},
					type: 2
				}
			}
      },
      'user[password]': {
          required: true,
          minlength: 6,
          maxlength: 18
	  },
	  'user[password_confirmation]': {
	  	  required: true,
		   equalTo: '#confirm_password'
	  }
		  	
    },
    messages: {
      'user[name]': {
          required: '请输入用户名!',
          //minlength: '至少{0}个字符',
		  //maxlength: '最多{0}个字符',
		  user_verify: '只含有汉字、数字、字母、下划线不能以下划线开头和结尾',
		  user_length_verify: '长度不小于4个字符且不大于18个字符,一个中文算两个字符',
		  remote: '用户名已存在!'
      },
      'user[email]': {
	  	  required: '请输入你的邮箱!',
		  email: '请输入正确邮箱格式!',
		  remote: '邮箱已存在!'
      },
      'user[password]': {
	  	  required: '请输入密码',
          minlength: '至少{0}个字符',
          maxlength: '最多{0}个字符'
	  },
	  'user[password_confirmation]': {
	  	  required: '确认密码不能为空!',
		   equalTo: '确认密码不正确!'
	  }

    }

 });

<%end%>


  <%= form_for(@user, html: { id: "check_loginup_form", role: 'form', class: 'form-signin' }) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :name, '用户名' %>
  	  <%= f.text_field :name, class: 'form-control', autofocus: '' %>
    </div>

    <div class="form-group">
  	  <%= f.label :email, '邮箱' %>
  	  <%= f.text_field :email, class: 'form-control' %>
	</div>

    <div class="form-group">
  	  <%= f.label :password, '密码' %>
  	  <%= f.password_field :password, id: 'confirm_password', class: 'form-control' %>
	</div>

    <div class="form-group">
  	  <%= f.label :password_confirmation, "确认密码" %>
  	  <%= f.password_field :password_confirmation, class: 'form-control' %>
	</div>

    <%= f.submit "注册", class: "btn btn-large btn-primary" %>
  <% end %>
<p>已有账户? <%= link_to "现在登录!", signin_path %></p>

