<% provide(:title, '注册') %>

<% content_for :jquery do %>

  //validate验证
 $("#check_loginup_form").validate({
    rules: {
      'user[name]': {
          required: true,
          minlength: 2,
		  maxlength: 18,
			remote: {
				url: "/user/ajax_validate_only",     //后台处理程序
				type: "post",               //数据发送方式
				dataType: "json",           //接受数据格式   
				data: {                     //要传递的数据
					val: function() {
						return $(":input[name='user[name]']").val();
					},
					type: 1
				}
			}
      },
      'user[email]': {
          required: true,
		  email: true,
			remote: {
				url: "/user/ajax_validate_only",     //后台处理程序
				type: "post",               //数据发送方式
				dataType: "json",           //接受数据格式   
				data: {                     //要传递的数据
					val: function() {
						return $(":input[name='user[email]']").val();
					},
					type: 2
				}
			}
      },
      'user[password]': {
          required: true,
          minlength: 6,
          maxlength: 18
	  },
	  'user[password_confirmation]': {
	  	  required: true,
		   equalTo: '#confirm_password'
	  }
		  	
    },
    messages: {
      'user[name]': {
          required: '请输入用户名!',
          minlength: '至少{0}个字符',
		  maxlength: '最多{0}个字符',
		  remote: '用户名已存在!'
      },
      'user[email]': {
	  	  required: '请输入你的邮箱!',
		  email: '请输入正确邮箱格式!',
		  remote: '邮箱已存在!'
      },
      'user[password]': {
	  	  required: '请输入密码',
          minlength: '至少{0}个字符',
          maxlength: '最多{0}个字符'
	  },
	  'user[password_confirmation]': {
	  	  required: '确认密码不能为空!',
		   equalTo: '确认密码不正确!'
	  }

    }

 });

<%end%>

<div class="main">
  <div class="span6 offset3">
	  <%= form_for(@user, html: { id: "check_loginup_form" }) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, '用户名' %>
      <%= f.text_field :name %>

      <%= f.label :email, '邮箱' %>
      <%= f.text_field :email %>

      <%= f.label :password, '密码' %>
      <%= f.password_field :password, id: 'confirm_password' %>

      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "注册", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>已有账户? <%#= link_to "现在登录!", signin_path %></p>
  </div>
</div>
