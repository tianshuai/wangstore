<%if @success%>
	var d = '<%=params[:id]%>';
	<%if params[:type]=='0'%>
		$('.state_'+d).text('关闭');
		$('.btn_state_'+d).html('<%=raw(link_to("启用" , { action: 'ajax_set_state', id: params[:id], type: 1 }, remote: true, method: :post))%> |');
	<%else%>
		$('.state_'+d).text('正常');
		$('.btn_state_'+d).html('<%=raw(link_to("关闭" , { action: 'ajax_set_state', id: params[:id], type: 0 }, remote: true, method: :post))%> |');
	<%end%>
<%else%>
	alert("<%=@notice%>");
<%end%>
