<%if @success%>
	var d = '<%=params[:id]%>';
	<%if params[:type]=='0'%>
		$('.show_publish_'+d).text('否');
		$('.btn_publish_'+d).html('<%=raw(link_to("发布" , { action: 'ajax_set_publish', id: params[:id], type: 1 }, remote: true, method: :post))%> |');
	<%else%>
		$('.show_publish_'+d).text('是');
		$('.btn_publish_'+d).html('<%=raw(link_to("取消发布" , { action: 'ajax_set_publish', id: params[:id], type: 0 }, remote: true, method: :post))%> |');
	<%end%>
<%else%>
	alert("<%=@notice%>");
<%end%>
