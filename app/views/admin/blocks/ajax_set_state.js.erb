<%if @success%>
	var d = '<%=params[:id]%>';
	<%if params[:type]=='0'%>
		$('.show_state_'+d).text('草稿');
		$('.btn_state_'+d).html('<%=raw(link_to("发布" , { action: 'ajax_set_state', id: params[:id], type: 1 }, remote: true, method: :post))%> |');
	<%else%>
		$('.show_state_'+d).text('发布');
		$('.btn_state_'+d).html('<%=raw(link_to("取消发布" , { action: 'ajax_set_state', id: params[:id], type: 0 }, remote: true, method: :post))%> |');
	<%end%>
<%else%>
	alert("<%=@notice%>");
<%end%>
